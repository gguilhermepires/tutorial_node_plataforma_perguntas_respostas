<!DOCTYPE html>

<%- include('partials/header.ejs')%>

<body>
    <%- include('partials/navbar.ejs')%>

    <div class="container">
        <hr>
        <h1><%=pergunta.titulo%></h1>
        <p><%=pergunta.descricao%></p>
        <hr>
        <form method="POST" action="/responder">
            <input type="hidden" id="pergunta" name="pergunta" value="<%=pergunta.id%>" >
            <h3> Responda</h3>
            <br>
            <label> Resposta:</label>
            <textarea id="corpo" name="corpo" placeholder="Digite sua resposta" class="form-control"></textarea>
            <br>
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <% respostas.forEach( resposta=>{ %>
            <br>
            <div class="card">
    
                <div class="card-body">
                    <p><%=resposta.corpo%></p>
                </div>
            </div>
    
            <%})%>
    </div>

</body>

<%- include('partials/footer.ejs')%>